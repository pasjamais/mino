<Window x:Class="mino.Element_Query"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:local="clr-namespace:mino"
        mc:Ignorable="d"
        Title="Element_Query" Height="450" Width="450">

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock TextWrapping="Wrap" Text="Введите название запроса:"/>
            <TextBox x:Name="TextBoxName" TextWrapping="Wrap" Text="TextBox" Width="293"/>
            <TextBlock TextWrapping="Wrap" Text="Введите запрос:"/>
            <TextBox x:Name="TextBoxQuery" TextWrapping="Wrap" Text="TextBox" Width="293" Height="247"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Height="41">
                <Button x:Name="Button_OK" 
                        Click="Button_OK_Click"
                        IsDefault="True" 
                        MinWidth="60" 
                        Margin="120,0,10,0" Cursor="Hand">OK</Button>
                <Button IsCancel="True" MinWidth="60">Отмена</Button> 
            </StackPanel>
            


             </StackPanel>

    </Grid>
</Window>
